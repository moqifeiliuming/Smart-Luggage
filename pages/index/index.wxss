page {
  /* background-color: #ccc; */
}
.dataHeader {
  display: flex;
  font-size: 50rpx;
  font-weight: bold;
  justify-content: space-around;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid black;
}
.hoverClass {
  background-color: #ccc;
}
.dataContent {
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0 50rpx 10rpx;
  font-size: 38rpx;
  color: #333;
}
.dataUnit {
  flex: 2;
  font-weight: bold;
}
.data {
  flex: 3;
  text-align: center;
}
.dataTime {
  flex: 6;
  text-align: end;
}
.lastData {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid black;
}
.menu {
  display: flex;
  justify-content: space-around;
}
.menu view {
  display: flex;
  flex-direction: column;
}
.section {
  display: flex;
  justify-content: space-around;
  font-size: 35rpx;
  color: black;
  padding: 20rpx 0;
  height: 50rpx;
  margin-top: 20rpx;
}
.section__title {
  font-size: 40rpx;
}
.picker {
  text-align: center;
  line-height: 50rpx;
  color: red;
}
.errortext {
  display: block;
  margin: 50rpx 20rpx;
  font-size: 38rpx;
  text-align: center;
  color: red;
}
.erroriamge {
  display: flex;
  width: 100%;
  height: 250rpx;
  margin-bottom: 50rpx auto;
  justify-content: center;
}
.erroriamge image {
  width: 250rpx;
  height: 250rpx;
}
.btn_area {
  position: fixed;
  left: 0;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  z-index: 999;
}
.btn_area :last-child {
  left: 375rpx;
  transform: translateX(-100%);
}

canvas {
  width: 262%;
  height: 650rpx;
  white-space: nowrap;
  overflow-x: auto;
}
.canvasGroup :last-child {
  height: 700rpx;
}
